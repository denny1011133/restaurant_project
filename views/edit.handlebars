<div class="container h-100">
  <div class="row h-100 my-auto justify-content-center align-items-center text-center">
    <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">餐廳名稱:</label>
        <input type="text" class="form-control" placeholder="輸入餐廳名稱" name="name" value="{{restaurant.name}}">
      </div>
      <div class="form-group">
        <label for="name_en">餐廳英文名稱:</label>
        <input type="text" class="form-control" placeholder="輸入餐廳英文名稱" name="name_en" value="{{restaurant.name_en}}">
      </div>
      <div class="form-group">
        <label for="category">分類</label>
        <input type="text" class="form-control" placeholder="輸入分類" name="category" value="{{restaurant.category}}">
      </div>
      <div class="form-group">
        <label for="image">照片連結</label>
        <input type="text" class="form-control" placeholder="輸入照片連結" name="image" value="{{restaurant.image}}">
      </div>
      <div class="form-group">
        <label for="location">店址</label>
        <input type="text" class="form-control" placeholder="輸入店址" name="location" value="{{restaurant.location}}">
      </div>
      <div class="form-group">
        <label for="phone">電話號碼</label>
        <input type="text" class="form-control" placeholder="輸入電話號碼" name="phone" value="{{restaurant.phone}}">
      </div>
      <div class="form-group">
        <label for="google_map">google map 連結</label>
        <input type="text" class="form-control" placeholder="輸入google map 連結" name="google_map"
          value="{{restaurant.google_map}}">
      </div>
      <div class="form-group">
        <label for="rating">評分</label>
        <input type="text" class="form-control" placeholder="輸入評分" name="rating" value="{{restaurant.rating}}">
      </div>
      <div class="form-group">
        <label for="description">簡介</label>
        <input type="text" class="form-control" placeholder="輸入簡介" name="description"
          value="{{restaurant.description}}">
      </div>
      <button type="submit" class="btn btn-primary">確認</button>
      <a href="/"><button type="button" class="btn btn-primary">返回</button></a>
    </form>
  </div>
</div>